<Alloy>
	<Window id="win3" class="window">
		<Require src="header" id="header"/>
		<View class="container">
			<View id="loginView">
				<TextField id="username" class="textField"/>
				<TextField id="password" class="textField" onReturn="login"/>
				<Button id="login" onClick="login">Login</Button>
			</View>
			<View id="notifyView">
				<TextField id="message" class="textField"/>
				<TextField id="badge" class="textField"/>
				<Button id="send" onClick="sendBroadcast">Send Broadcast</Button>
			</View>
		</View>
	</Window>
</Alloy>